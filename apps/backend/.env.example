# Server
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://zoop:zoop_dev_password@localhost:5432/zoop

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS
CORS_ORIGINS=http://localhost:8081,http://localhost:19006

# Privy (Auth)
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# JWT (Backend tokens)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Hedera (EVM-compatible via JSON-RPC)
HEDERA_NETWORK=testnet
HEDERA_JSON_RPC_URL=https://testnet.hashio.io/api
HEDERA_CHAIN_ID=296

# BSC
BSC_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545

# Safe Factory Configuration
# The ZoopSafeFactory contract address on Hedera
SAFE_FACTORY_ADDRESS=0x0e1942928a46cdBda8dA02A7943DcF3a7df9b810
# Private key of the relayer that pays for Safe deployment gas
# This account needs HBAR to pay for Safe creation transactions
SAFE_FACTORY_RELAYER_PRIVATE_KEY=
# Rate limiting for Safe creation (Hedera has ~2 accounts/second limit)
SAFE_CREATION_RATE_LIMIT_MS=600
SAFE_CREATION_MAX_RETRIES=3
